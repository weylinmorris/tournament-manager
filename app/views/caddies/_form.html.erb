<%= form_with model: @caddie do |form| %>
  <div>
    <%= form.label :caddie_name %>
    <%= form.text_field :caddie_name %>
    <% @caddie.errors.full_messages_for(:caddie_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :location %>
    <%= form.text_field :location %>
    <% @caddie.errors.full_messages_for(:location).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :rating %>
    <%= form.text_field :rating %>
    <% @caddie.errors.full_messages_for(:rating).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>